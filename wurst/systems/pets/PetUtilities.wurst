public function handleTamePet(player owner, unit u) returns unit
    let petId = getCorrespondingHeroPetId(u)
    if petId != 0
        u.hide()
        let pet = createUnit(owner, petId, u.getPos(), u.getFacingAngle())
        owner.setPet(pet)
        u.remove()
        return pet
    return null